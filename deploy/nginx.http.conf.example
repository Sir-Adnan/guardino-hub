# HTTP-only Nginx config (IP mode or domain without SSL)
server {
  listen 80;
  server_name _;

  # Let's Encrypt challenge (only used if you later enable SSL)
  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
  }

  location /health {
    proxy_pass http://api:8000/health;
    proxy_set_header Host $host;
  }

  location /api/ {
    # Keep /api prefix so backend routes under /api/v1 remain valid.
    proxy_pass http://api:8000/api/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # FastAPI docs (both /docs and /api/docs styles)
  location /api/docs {
    proxy_pass http://api:8000/docs;
    proxy_set_header Host $host;
  }
  location /api/openapi.json {
    proxy_pass http://api:8000/openapi.json;
    proxy_set_header Host $host;
  }
  location /api/redoc {
    proxy_pass http://api:8000/redoc;
    proxy_set_header Host $host;
  }
  location = /docs {
    proxy_pass http://api:8000/docs;
    proxy_set_header Host $host;
  }
  location = /openapi.json {
    proxy_pass http://api:8000/openapi.json;
    proxy_set_header Host $host;
  }
  location = /redoc {
    proxy_pass http://api:8000/redoc;
    proxy_set_header Host $host;
  }

  location / {
    proxy_pass http://web:3000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}
