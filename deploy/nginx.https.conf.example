# HTTPS Nginx config (domain + Let's Encrypt)
server {
  listen 80;
  server_name example.com;

  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  listen 443 ssl http2;
  server_name example.com;

  ssl_certificate /etc/letsencrypt/live/example.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/example.com/privkey.pem;

  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 10m;
  ssl_protocols TLSv1.2 TLSv1.3;

  location /health {
    proxy_pass http://api:8000/health;
    proxy_set_header Host $host;
  }

  location /api/ {
    # Keep /api prefix so backend routes under /api/v1 remain valid.
    proxy_pass http://api:8000/api/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
  }

  # FastAPI docs (both /docs and /api/docs styles)
  location /api/docs {
    proxy_pass http://api:8000/docs;
    proxy_set_header Host $host;
  }
  location /api/openapi.json {
    proxy_pass http://api:8000/openapi.json;
    proxy_set_header Host $host;
  }
  location /api/redoc {
    proxy_pass http://api:8000/redoc;
    proxy_set_header Host $host;
  }
  location = /docs {
    proxy_pass http://api:8000/docs;
    proxy_set_header Host $host;
  }
  location = /openapi.json {
    proxy_pass http://api:8000/openapi.json;
    proxy_set_header Host $host;
  }
  location = /redoc {
    proxy_pass http://api:8000/redoc;
    proxy_set_header Host $host;
  }

  location / {
    proxy_pass http://web:3000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
  }
}
